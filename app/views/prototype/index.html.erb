<% content_for :title, "Hack Club x AMD: Prototype" %>

  <div class="text-white overflow-hidden">
    <!-- Banner -->
    <section class="relative w-full">
      <div class="absolute inset-0 bg-black/40 z-10"></div>
      <%= image_tag "prototype/prototype_banner_narrow.webp",
        alt: "Prototype banner",
        class: "block w-full h-auto select-none",
        draggable: false,
        loading: :eager,
        decoding: :async
      %>
      <div class="absolute inset-0 z-20 flex flex-col items-center justify-center px-4 space-y-2 md:space-y-20">
        <div class="space-y-1">
          <div class="space-y-2">
            <div class="relative flex flex-col items-center">
              <%= image_tag "prototype/prototype_logo.webp",
                alt: "Prototype",
                class: "h-40 md:h-72 w-auto"
              %>
            </div>
            <div class="text-center text-sm md:text-2xl font-rc-full mx-4">
              <h2 class="hidden md:block">December 19-21, 2025 @ SF Bay Area<br>For teens in the USA only</h2>
              <h2 class="md:hidden">December 19-21, 2025</h2>
              <h2 class="md:hidden">@ SF Bay Area</h2>
              <h2 class="md:hidden">For teens in the USA only</h2>
            </div>
          </div>
        </div>
      </div>

       <!-- Floating scroll down arrow -->
        <div class="absolute left-0 right-0 flex justify-center z-999" style="top: calc(100vh - 10vh);">
          <div class="float-arrow cursor-pointer" onclick="window.scrollTo({ top: window.innerHeight, behavior: 'smooth' })">
            <svg class="w-12 h-12 md:w-16 md:h-16 text-white drop-shadow-lg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </div>
        </div>
      </div>
    </section>


    <!-- How does this work section -->
    <section class="relative w-full px-4 md:px-8 lg:px-12 z-20">
      <div class="grid grid-cols-1 md:grid-cols-2 items-stretch">
        <!-- Left: content -->
        <div class="bg-[#500E0E] flex m-4 md:m-8 lg:m-12">
          <div class="px-6 py-12 md:px-12 md:py-20 w-full flex items-center">
            <div class="w-full max-w-xl mx-auto space-y-6">
              <h2 class="text-3xl md:text-5xl font-rc-full">How does this work?</h2>

              <div class="space-y-6 md:text-xl leading-relaxed">
                <div>
                  <div>
                  <p class="font-bold mb-2">Your task:</p>
                  <p>Use AI and custom hardware attachments to complete challenges.</p>
                  <p class="text-sm md:text-base italic mt-2 opacity-90">(to be announced day of)</p>
                </div>
                  <p class="font-bold mb-2">You will be given:</p>
                  <ul class="list-disc list-inside space-y-1">
                    <li>An AMD MiniPC</li>
                    <li>A Hugging Face Le Robot arm</li>
                    <li>Hardware to fully customize it</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right: image as background w/ wobble+hover -->
        <div class="relative overflow-hidden min-h-[150px] md:min-h-[280px] z-99">
          <div
            class="absolute inset-0 bg-no-repeat bg-center bg-contain md:scale-110 wobble-2 md:hover:scale-130 motion-safe:transition-transform duration-300 ease-out will-change-transform select-none pointer-events-none"
            style="background-image: url('<%= image_path("prototype/prototype_parts.webp") %>');"
            aria-hidden="true">
          </div>
        </div>
      </div>
    </section>


    <!-- How can I qualify section -->
    <section class="w-full grid-bg">
      <div class="bg-bp-dark flex" style="clip-path: polygon(0 5%, 100% 0%, 100% 95%, 0% 100%);">
        <div class="px-6 py-12 md:px-12 md:py-20 w-full flex items-center">
          <div class="w-full max-w-4xl mx-auto space-y-8 text-center">
            <h2 class="text-4xl md:text-6xl font-rc-full">How can I qualify?</h2>
            
            <div class="space-y-6 md:text-xl leading-relaxed">
              <p class="text-2xl md:text-3xl font-bold">
                You are given an invitation if:
              </p>
              <p>
                You have <span class="font-bold text-bp-warning">more than 100% prototype progress</span> on Hack Club Blueprint.
              </p>
                  <!-- Learn More Button -->
                  <div class="w-full flex justify-center px-4 md:px-8 lg:px-12">
                    <%= render "shared/button", url: user_logged_in? ? home_path : root_path, text: "Learn more", variant: :outline, class: "bg-bp-dark border-2 px-8 py-4 md:px-12 md:py-6 text-xl md:text-3xl font-rc-full hover:bg-white hover:text-bp-dark transition-colors" %>
                  </div>
              <p>
                This could mean one tier 1 project, a tier 2 and 3 project, etc.
              </p>
              <p>
                <span class="font-bold text-bp-warning">Travel Stipends</span> are $100 by default and can go up to $400 by building more projects
              </p>
            </div>

            <div class="flex justify-center py-8">
              <img 
                src="https://hc-cdn.hel1.your-objectstorage.com/s/v3/7a9621629cf3862d1976082a7b9b178cda021121_Untitled-2025-11-08-1959.svg" 
                alt="Blueprint tier structure showing points and funding"
                class="w-full max-w-4xl h-auto"
              />
            </div>
          </div>
        </div>
      </div>
    </section>




    <!-- Previous Hackathon Video -->
    <section class="w-full py-12 md:py-20 px-4 md:px-8 lg:px-12">
      <div class="max-w-5xl mx-auto px-6 md:px-12 space-y-8">
        <h2 class="text-3xl md:text-5xl font-rc-full text-center">Our previous hackathon, Undercity:</h2>
        
        <div class="aspect-video w-full">
          <iframe 
            width="100%" 
            height="100%" 
            src="https://www.youtube.com/embed/kaEFv7e49mo" 
            title="Undercity Hackathon"
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
            allowfullscreen>
          </iframe>
        </div>
      </div>
    </section>

    <footer class="relative w-full min-h-[600px] md:min-h-[800px]">
      <%= image_tag "prototype/prototype_footer.webp", alt: "", class: "absolute inset-0 w-full h-full object-cover", "aria-hidden": true, style: "clip-path: polygon(0 8%, 100% 0%, 100% 100%, 0% 100%);" %>
      <div class="relative w-full px-8 py-8 md:px-16 lg:px-20 md:py-12 pt-24 md:pt-40">
        <!-- FAQ Section -->
        <div class="space-y-8 mx-auto max-w-6xl mb-12">
          <h2 class="text-3xl text-center md:text-5xl font-rc-full">FAQ</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center md:text-left">
            <div>
              <h3 class="mb-3 font-bold text-lg md:text-xl text-bp-warning">When is Prototype?</h3>
              <p class="text-base md:text-lg">December 19-21, 2025 at AMD HQ in Austin, Texas</p>
            </div>
            <div>
              <h3 class="mb-3 font-bold text-lg md:text-xl text-bp-warning">How do I qualify?</h3>
              <p class="text-base md:text-lg">You need more than 100% prototype progress on Hack Club Blueprint. Must be a teenager between ages 13-18 from the United States.</p>
            </div>
            <div>
              <h3 class="mb-3 font-bold text-lg md:text-xl text-bp-warning">Why is Prototype only available to US teenagers?</h3>
              <p class="text-base md:text-lg">Hack Club Prototype is a part of AMD's AI literacy pledge for America. As a result, it is only available to teenagers based in the United States.</p>
            </div>
            <div>
              <h3 class="mb-3 font-bold text-lg md:text-xl text-bp-warning">What will I build?</h3>
              <p class="text-base md:text-lg">You'll use AI and custom hardware attachments to complete challenges (announced day of)</p>
            </div>
            <div>
              <h3 class="mb-3 font-bold text-lg md:text-xl text-bp-warning">What do I get?</h3>
              <p class="text-base md:text-lg">An AMD MiniPC, a Hugging Face Le Robot arm, and hardware to fully customize it</p>
            </div>
            <div>
              <h3 class="mb-3 font-bold text-lg md:text-xl text-bp-warning">Do I need prior experience?</h3>
              <p class="text-base md:text-lg">Not at all! We welcome beginners and provide resources to help you learn.</p>
            </div>
          </div>
          <div class="text-center md:text-xl pt-4">
            <p>Have more questions? Check out our <a href="/faq" class="underline hover:text-bp-warning transition-colors">full FAQ!</a></p>
          </div>
          <%# <div class="w-full flex justify-center py-4">
            <a href="/about/parents" class="text-xl md:text-2xl font-rc-full text-white hover:text-bp-warning transition-colors underline">
              Parents info
            </a>
          </div> %>
        </div>

        <div class="max-w-6xl mx-auto">
          <p class="mb-4 text-lg md:text-xl font-rc-full">A project by <a target="_blank" rel="noopener noreferrer" class="underline hover:text-white transition-colors text-bp-warning" href="https://hackclub.com?utm_source=blueprint">Hack Club</a></p>
          <p class="max-w-3xl text-white/75 text-sm md:text-base mb-8">
            Hack Club is a 501(c)(3) nonprofit and network of 60k+ technical high schoolers. We believe you learn best by building so we're creating community and providing grants so you can make awesome projects. In the past few years, we've 
            <a target="_blank" rel="noopener noreferrer" class="underline hover:text-bp-warning transition-colors" href="https://summer.hackclub.com/">partnered with GitHub to run Summer of Making</a>, 
            <a target="_blank" rel="noopener noreferrer" class="underline hover:text-bp-warning transition-colors" href="https://github.com/hackclub/the-hacker-zephyr">hosted the world's longest hackathon on land</a>, and 
            <a target="_blank" rel="noopener noreferrer" class="underline hover:text-bp-warning transition-colors" href="https://www.youtube.com/watch?v=QvCoISXfcE8">ran Canada's largest high school hackathon</a>.<br><br>At Hack Club, students aren't just learning, they're shipping.
          </p>
          <div class="flex flex-wrap gap-x-16 gap-y-8">
            <div class="flex flex-col">
              <p class="mb-3 text-base md:text-lg font-rc-full">Hack Club</p>
              <div class="text-sm md:text-base space-y-1">
                <a class="block hover:text-bp-warning transition-colors" href="https://hackclub.com/philosophy/" target="_blank">Philosophy</a>
                <a class="block hover:text-bp-warning transition-colors" href="https://hackclub.com/team/" target="_blank">Our Team &amp; Board</a>
                <a class="block hover:text-bp-warning transition-colors" href="https://hackclub.com/brand/" target="_blank">Branding</a>
                <a class="block hover:text-bp-warning transition-colors" href="https://hackclub.com/philanthropy/" target="_blank">Donate</a>
              </div>
            </div>
            <div class="flex flex-col">
              <p class="mb-3 text-base md:text-lg font-rc-full">Resources</p>
              <div class="text-sm md:text-base space-y-1">
                <a class="block hover:text-bp-warning transition-colors" href="https://events.hackclub.com/" target="_blank">Community Events</a>
                <a class="block hover:text-bp-warning transition-colors" href="https://jams.hackclub.com/" target="_blank">Jams</a>
                <a class="block hover:text-bp-warning transition-colors" href="https://workshops.hackclub.com/" target="_blank">Workshops</a>
                <a class="block hover:text-bp-warning transition-colors" href="https://hackclub.com/conduct/" target="_blank">Code of Conduct</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </div>
