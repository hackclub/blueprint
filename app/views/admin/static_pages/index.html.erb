<section class="flex flex-col items-center">
  <%= render "shared/button", text: "Escape hatch", url: home_path, class: "mr-auto py-0.5 px-4 text-base"%>
  <div class="w-full space-y-4">
    <div class="py-4 space-y-1">
      <h1 class="text-5xl">Admin dashboard</h1>
      <p class="text-xl">'ello there, <%= current_user.display_name %>!</p>
    </div>
    <div class="max-w-6xl space-y-6">
      <div class="space-y-6">
        <p class="text-4xl font-rc-full">Tasks</p>
        <div class="grid grid-cols-3 gap-6">
          <% if current_user.reviewer_perms? %>
            <%= render "shared/button", variant: :outline, text: "Design Review (#{Project.where(is_deleted: false, review_status: :design_pending).count.to_i})", url: admin_design_reviews_path %>
            <%= render "shared/button", variant: :outline, text: "Build Review (#{Project.where(is_deleted: false, review_status: :build_pending).count.to_i})", url: admin_build_reviews_path %>
          <% end %>
        </div>
        <p class="text-4xl font-rc-full">Dashboards</p>
        <div class="grid grid-cols-3 gap-6">
          <% if current_user.reviewer_perms? %>
            <%= render "shared/button", variant: :outline, text: "Projects (#{Project.where(is_deleted: false).count.to_i})", url: admin_projects_path %>
            <%= render "shared/button", variant: :outline, text: "Users (#{User.count.to_i})", url: admin_users_path %>
          <% end %>
          <% if current_user.admin? %>
            <%= render "shared/button", variant: :outline, text: "Flipper", url: "/admin/flipper" %>
            <%= render "shared/button", variant: :outline, text: "Jobs", url: "/admin/jobs" %>
            <%= render "shared/button", variant: :outline, text: "Blazer", url: "/admin/blazer" %>
            <%= render "shared/button", variant: :outline, text: "HCB Transactions", url: admin_hcb_transactions_path %>
          <% end %>
        </div>
        <p class="text-4xl font-rc-full">3rd party</p>
          <div class="grid grid-cols-3 gap-6">
            <% if current_user.admin? %>
              <%= render "shared/button", variant: :outline, text: "Metabase", url: "https://metabase.hackclub.com/dashboard/34-blueprint" %>
              <%= render "shared/button", variant: :outline, text: "Airtable", url: "https://airtable.com/app4b3xOfiEHnXJe0/" %>
              <%= render "shared/button", variant: :outline, text: "Sentry", url: "https://hack-club-hcb.sentry.io/insights/projects/blueprint-ysws/" %>
              <%= render "shared/button", variant: :outline, text: "Skylight", url: "https://www.skylight.io/app/applications/XFOzxDyHAv6P/" %>
              <%= render "shared/button", variant: :outline, text: "HCB", url: "https://hcb.hackclub.com/blueprint-ysws/transactions" %>
            <% end %>
          </div>
      </div>
      
    </div>
  </div>
</section>
