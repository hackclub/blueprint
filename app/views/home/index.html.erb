<section class="flex justify-center">
  <div class="w-full max-w-6xl space-y-4">
    <div class="py-2 md:py-4 space-y-1">
      <h1 class="text-3xl md:text-5xl">Home</h1>
      <p class="text-lg md:text-xl">Here's what's cooking today</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-8">
      <%= render 'shared/card', class: 'col-span-1 md:col-span-2' do %>
        <p class="text-2xl md:text-3xl font-rc-full">Congrats on your first project!</p>
        <a href="https://forms.hackclub.com/t/6MhoMy5dY7us?ID=<%= current_user.slack_id %>&BPID=<%= current_user.id %>&email=<%= current_user.email %>" class="font-rc-full text-lg md:text-2xl bg-bp-success text-bp-dark grow px-6 md:px-8 text-center py-3 md:py-1 min-h-[44px] flex items-center justify-center">
          Claim your stickers!
        </a>
      <% end %>
    <%= render 'projects' %>
      <% if current_user.tasks.completed? && current_user.free_stickers_claimed %>
        <%= render 'announcements', class: 'col-span-1 md:col-span-2' %>
      <% else %>
        <%= render 'tasks' %>
        <%= render 'announcements' %>
      <% end %>
        <%= render 'viral_projects' %>
    </div>
  </div>
</section>
