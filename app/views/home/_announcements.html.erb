<% announcements = [
    {
    title: "Campfire Flagship",
      date: "Hack Club Event",
      content: "Curious about game development? Meet your favorite YouTubers including William Osman and Michael Reeves at Hack Club's Campfire Flagship! (Not directly part of Blueprint)",
      level: :success,
      cta: { text: "RSVP Now", url: "https://flagship.hackclub.com/?utm_source=c-blueprint" }
    },
    {
      title: "BLUEPRINT IS EXTENDED!",
      date: "Program Announcement",
      content: "Blueprint just got extended again! The last day to submit your projects is now March 31st, 2026. THIS IS THE FINAL EXTENSION.",
      level: :warning
    },
    
  ]
%>

<%= render "shared/card", class: tw("flex flex-col", local_assigns[:class]) do %>
  <div class="flex-shrink-0">
    <h2 class="text-2xl md:text-3xl">Upcoming events</h2>
  </div>

  <% if announcements.any? %>
    <div class="relative flex-grow overflow-hidden">
      <div class="overflow-y-auto space-y-4">
        <% announcements.each_with_index do |announcement, index| %>
          <% if index == 1 && announcements.length > 1 %>
            <div class="text-center text-lg text-white/60 ">
              Past announcements:
            </div>
          <% end %>
          <% dark_text = announcement[:level] == :warning || announcement[:level] == :danger || announcement[:level] == :success || announcement[:level] == :light %>
          <div class="p-3 md:p-4 bg-bp-<%= announcement[:level] || "dark" %> <%= dark_text ? "text-bp-dark" : "inset-shadow-sm inset-shadow-black/25" %> <%= index > 0 ? "opacity-80" : "" %>">
            <div class="flex items-center justify-center">
              <div class="text-center">
                <div class="mb-1 text-xs md:text-sm font-semibold"><%= announcement[:date] %></div>
                <div class="text-lg md:text-2xl font-bold font-rc-full"><%= announcement[:title] %></div>
              </div>
            </div>
            <div class="text-center">
              <p class="mb-3 text-sm md:text-lg"><%= announcement[:content] %></p>
              <% if announcement[:cta] %>
                <%= render "shared/button", text: announcement[:cta][:text], url: announcement[:cta][:url], class: "min-h-[44px] #{dark_text ? "bg-bp-dark text-white border-0 hover:bg-bp-lighter" : ""}" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <%# <div class="absolute bottom-0 left-0 right-0 h-16 pointer-events-none bg-gradient-to-t from-bp-darker to-transparent"></div> %>
    </div>
  <% else %>
    <div class="flex items-center justify-center text-center grow">
      <p class="text-sm md:text-base">It's pretty quiet in here...<br>Check back later!</p>
    </div>
  <% end %>
<%end %>