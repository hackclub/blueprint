<%= render 'shared/card', class: 'col-span-1 md:col-span-2 space-y-3' do %>
  <div class="flex items-center justify-between">
    <div>
      <h3 class="text-xl md:text-2xl font-rc-full">Prototype Progress</h3>
      <p class="text-sm opacity-80">Get an invitation to prototype at 100%</p>
    </div>
    <div class="text-2xl md:text-3xl font-bold"><%= @bp_progress %>%</div>
  </div>

  <div class="mt-2">
    <div class="w-full h-4 md:h-5 rounded overflow-hidden" style="background-color: rgba(104, 142, 106, 0.3); border: 1px solid rgba(104, 142, 106, 0.5);">
      <div
        class="h-full transition-all"
        style="width: <%= [@bp_progress, 100].min %>%; background-color: #A8F0AE; background-image: repeating-linear-gradient(45deg, rgba(255,255,255,0.10) 0 2px, transparent 2px 8px); background-blend-mode: overlay;">
      </div>
    </div>

    <% if @bp_progress > 100 %>
      <p class="mt-1 text-xs opacity-80">
        You exceeded the goal by <%= @bp_progress - 100 %>% â€” keep going!
      </p>
    <% end %>
  </div>
<% end %>
