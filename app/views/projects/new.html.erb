<section class="flex flex-col items-center grow space-y-6">
  <div class="w-full max-w-3xl space-y-4 min-h-full flex flex-col m-8">
    <%= render "shared/card" do %>
      <h1 class="text-4xl">Start a new project</h1>
      <% unless current_user.is_pro? %>
        <p class="text-xl">Give your project a name and a brief description!</p>
      <% end %>
      <%= form_with model: @project, html: { class: "space-y-6" } do |f| %>
        <% if @project.errors.any? %>
          <div class="p-4 text-red-900 rounded-md bg-bp-danger">
            <p><strong><%= pluralize(@project.errors.count, "error") %></strong> prevented this project from being saved:</p>
            <ul class="pl-5 list-disc">
              <% @project.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :title, class: "block text-xl font-medium font-rc-full" %>
          <%= f.text_field :title,
                required: true,
                class: "input px-3 w-full",
                placeholder: current_user.is_pro? ? nil : 'sam\'s macropad!' %>
        </div>

        <div>
          <%= f.label :description, class: "block text-xl font-medium font-rc-full" %>
          <%= f.text_area :description,
                required: true,
                rows: 6,
                class: "input px-3 mt-1 block w-full",
                placeholder: current_user.is_pro? ? nil : "My personal macropad for video editing! I plan on adding 6 keys and an OLED screen to display status" %>
        </div>

        <div>
          <%= f.submit current_user.is_pro? ? "Create project" : "Create first project", class: "btn btn-primary block w-full" %>
        </div>
      <% end %>

    <% end %>
  </div>
</section>